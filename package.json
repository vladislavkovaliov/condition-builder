{
  "name": "condition-builder",
  "version": "0.0.0-development",
  "private": false,
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "types",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && rm -rf types && tsc",
    "assert": "node --experimental-strip-types src/__tests__/index.test.ts ",
    "commit": "cz",
    "semantic-release": "semantic-release",
    "prepare": "npm run build",
    "format": "npx prettier . --write",
    "test": "vitest --run --maxConcurrency 1"
  },
  "author": "Vlad (v.v.kovaliov@gmail.com)",
  "license": "MIT",
  "keywords": [
    "condition",
    "builder"
  ],
  "description": "",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladislavkovaliov/condition-builder.git"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.0"
  },
  "dependencies": {
    "semantic-release": "^24.2.6"
  }
}
